From 60b00ac766d89ce0be85368fa869e62aede2d656 Mon Sep 17 00:00:00 2001
From: Igor Grinberg <grinberg@compulab.co.il>
Date: Sun, 3 Mar 2013 09:35:13 +0200
Subject: ARM: i.MX6: cm-fx6: prepare for HX8520_C support

Rename any ADS7846 specific data to be ADS7846 specific.
This is in preparation for the second touchscreen controller.

Signed-off-by: Igor Grinberg <grinberg@compulab.co.il>
---
 arch/arm/mach-mx6/board-cm-fx6-dl.h |    2 +-
 arch/arm/mach-mx6/board-cm-fx6-q.h  |    2 +-
 arch/arm/mach-mx6/board-cm-fx6.c    |    6 +++---
 3 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/arch/arm/mach-mx6/board-cm-fx6-dl.h b/arch/arm/mach-mx6/board-cm-fx6-dl.h
index 00ff4cd..4790579 100644
--- a/arch/arm/mach-mx6/board-cm-fx6-dl.h
+++ b/arch/arm/mach-mx6/board-cm-fx6-dl.h
@@ -24,7 +24,7 @@ static iomux_v3_cfg_t cm_fx6_dl_pads[] = {
 	MX6DL_PAD_KEY_ROW0__UART4_RXD,
 	/* Green LED */
 	MX6DL_PAD_EIM_EB3__GPIO_2_31,
-	/* TSPENDOWN */
+	/* ADS7846 PENDOWN */
 	MX6DL_PAD_SD4_DAT7__GPIO_2_15,
 	/* USB HUB Reset */
 	MX6DL_PAD_SD3_RST__GPIO_7_8,
diff --git a/arch/arm/mach-mx6/board-cm-fx6-q.h b/arch/arm/mach-mx6/board-cm-fx6-q.h
index 4a61464..1887222 100644
--- a/arch/arm/mach-mx6/board-cm-fx6-q.h
+++ b/arch/arm/mach-mx6/board-cm-fx6-q.h
@@ -24,7 +24,7 @@ static iomux_v3_cfg_t cm_fx6_q_common_pads[] = {
 	MX6Q_PAD_KEY_ROW0__UART4_RXD,
 	/* Green LED */
 	MX6Q_PAD_EIM_EB3__GPIO_2_31,
-	/* TSPENDOWN */
+	/* ADS7846 PENDOWN */
 	MX6Q_PAD_SD4_DAT7__GPIO_2_15,
 	/* USB HUB Reset */
 	MX6Q_PAD_SD3_RST__GPIO_7_8,
diff --git a/arch/arm/mach-mx6/board-cm-fx6.c b/arch/arm/mach-mx6/board-cm-fx6.c
index 8097c1c..d9d9fd4 100644
--- a/arch/arm/mach-mx6/board-cm-fx6.c
+++ b/arch/arm/mach-mx6/board-cm-fx6.c
@@ -82,7 +82,7 @@
 #include "board-cm-fx6-dl.h"
 
 /* GPIO PIN, sort by PORT/BIT */
-#define CM_FX6_TSPENDOWN		IMX_GPIO_NR(2, 15)
+#define CM_FX6_ADS7846_PENDOWN		IMX_GPIO_NR(2, 15)
 #define CM_FX6_ECSPI1_CS0		IMX_GPIO_NR(2, 30)
 #define CM_FX6_GREEN_LED		IMX_GPIO_NR(2, 31)
 #define CM_FX6_ECSPI1_CS1		IMX_GPIO_NR(3, 19)
@@ -383,7 +383,7 @@ static struct ads7846_platform_data ads7846_config = {
 	.debounce_max		= 30,
 	.debounce_tol		= 10,
 	.debounce_rep		= 1,
-	.gpio_pendown		= CM_FX6_TSPENDOWN,
+	.gpio_pendown		= CM_FX6_ADS7846_PENDOWN,
 	.keep_vref_on		= 1,
 };
 
@@ -421,7 +421,7 @@ static struct spi_board_info cm_fx6_spi0_board_info[] __initdata = {
 		.max_speed_hz	= 1500000,
 		.bus_num	= 0,
 		.chip_select	= 1,
-		.irq		= gpio_to_irq(CM_FX6_TSPENDOWN),
+		.irq		= gpio_to_irq(CM_FX6_ADS7846_PENDOWN),
 		.platform_data	= &ads7846_config,
 	},
 #endif
